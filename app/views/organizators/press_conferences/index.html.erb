
<div class="container-fluid altoMinimo">
    <div class="row">
        <div class="col-xl-2 col-sm-12" id="lateral">
          <h5><mark>Panel de <%= current_organizator.name %></mark></h5>
          <br>
        <%= link_to "Mi Perfil", organizators_profile_show_path, class: "btn  btn-sm btn-info btn-block" %>
        <%= link_to 'Editar Perfil', organizators_profile_edit_path, class: "btn btn-sm btn-secondary btn-block mb-2" %>
        <%= link_to 'Crear Nueva Pauta', new_organizators_press_conference_path, class: "btn btn-sm btn-secondary btn-block mb-2" %>
        </div>
        <div class="col-xl-10 col-sm-12">


      <h5><i class="fas fa-microphone"></i> <strong>Todas mis pautas</strong></h5>
      <div class="table-responsive-sm">
        <table class="table table-striped">
          <thead class="bg-info">
            <tr>
              <th>Título</th>

              <th>Fecha</th>
              <th>Hora</th>
              <th>Dirección</th>
              <th>Estado Actual</th>
              <th>Postulaciones</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @press_conferences.each do |press_conference| %>
              <tr>
                <td><%= press_conference.title %></td>
                <td><%= press_conference.date.strftime("%d/%m/%Y") %></td>
                <td><%= press_conference.time.strftime("%H:%M") %></td>
                <td><%= press_conference.address %></td>
                <td><%= press_conference.status %></td>
                <td><%= press_conference.solicituds.count %></td>
                <td>
                  <%= link_to  organizators_press_conference_path(press_conference) do %>
                  <i class="fas fa-lg fa-eye"></i></td>
                  <%end  %>
                  <td>
                  <%= link_to edit_organizators_press_conference_path(press_conference) do %>
                  <i class="fas fa-lg fa-edit"></i>
                  <%end%></td>
                  <td>
                  <%= link_to  organizators_press_conference_path(press_conference), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="far fa-lg fa-trash-alt"></i>
                  <% end %>

                </td>


            <% end %>
          </tbody>
        </table>
      </div>
        </div>
    </div>

</div>
