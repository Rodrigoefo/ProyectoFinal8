<h4 class=" d-flex justify-content-center mb-5">Todas mis pautas</h4>

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2 col-sm-12">
          <h3>Sobre el organizator</h3>
          <p><%= link_to "Mi Perfil", organizators_profile_show_path, class: "btn  btn-sm btn-danger" %></p>
          <p><%= link_to 'Crear Nueva Pauta', new_organizators_press_conference_path, class: "btn btn-sm btn-secondary" %></p>


        </div>


        <div class="col-xl-10 col-sm-12">

      <!-- <div class="table-responsive"> -->
        <table class="table table-striped">
          <thead class="bg-danger">
            <tr>
              <th>Título</th>

              <th>fecha</th>
              <th>Hora</th>
              <th>Dónde</th>
              <th>Estado Actual</th>
              <th>Postulaciones</th>

              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @press_conferences.each do |press_conference| %>
              <tr>
                <td><%= press_conference.title %></td>
                <td><%= press_conference.date.strftime("%d %B %Y") %></td>
                <td><%= press_conference.time.strftime("%H:%M") %></td>
                <td><%= press_conference.address %></td>
                <td><%= press_conference.status %></td>
                <td><%= press_conference.solicituds.count %></td>
                <td>
                  <%= link_to  organizators_press_conference_path(press_conference) do %>
                  <i class="fas fa-lg fa-eye"></i></td>
                  <%end  %>
                  <td>
                  <%= link_to edit_organizators_press_conference_path(press_conference) do %>
                  <i class="fas fa-lg fa-edit"></i>
                  <%end%></td>
                  <td>
                  <%= link_to  organizators_press_conference_path(press_conference), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="far fa-lg fa-trash-alt"></i>
                  <% end %>

                </td>


            <% end %>
          </tbody>
        </table>
      <!-- </div> -->
        </div>
    </div>

</div>
