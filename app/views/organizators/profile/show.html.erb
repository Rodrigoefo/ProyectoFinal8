
<div class="container">

  <div class="row">
    <div class="col-2">
      <h3>Perfil del Organizador</h3>

      <%= link_to "Crear una pauta", new_organizators_press_conference_path, class: "btn btn-sm btn-secondary" %>
    </div>

    <div class="col-10">
      <table class="table tableSize">
        <thead>
          <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Dónde</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

          <% current_organizator.press_conferences.each do |press_conference| %>
            <tr>
              <td><%= press_conference.title %></td>
              <td><%= truncate(press_conference.description) %></td>
              <td><%= press_conference.date %></td>
              <td><%= press_conference.time %></td>
              <td><%= press_conference.address %></td>
              <td><%= press_conference.status %></td>
              <td><%= link_to 'Show', organizators_press_conference_path(press_conference), class: "btn btn-sm btn-warning"%></td>
              <td><%= link_to 'Edit', edit_organizators_press_conference_path(press_conference), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', organizators_press_conference_path(press_conference), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
            </tr>

          <% end %>
        </tbody>
      </table>




    </div>


  </div>

</div>
