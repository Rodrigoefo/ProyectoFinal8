
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form_layout"}) do |f| %>

<div class="row">
  <div class="col">
    <div class="form-group">
      <div class="control-label ">
        <%= f.label :name, "Nombres" %>
        <div class="input-group">
          <div class="input-group-prepend">
              <span class="input-group-text" id=""><i class="fas fa-file-signature"></i></span>
          </div>
        <%= f.text_field :name, autofocus: true , class: "form-control form-control-sm " %>
      </div>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="form-group">
      <div class="control-label">
        <%= f.label :lastname, "Apellidos" %>
        <div class="input-group">
          <div class="input-group-prepend">
              <span class="input-group-text" id=""><i class="fas fa-file-signature"></i></span>
          </div>
        <%= f.text_field :lastname, class: "form-control form-control-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :rut %>
      <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id=""><i class="far fa-id-card"></i></span>
        </div>
      <%= f.text_field :rut, class: "form-control form-control-sm" %>
      </div>
    </div>

  </div>
  <div class="form-group">
    <div class="control-label">
      <%= f.label :email %>
    </div>
    <div>
      <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id=""><i class="far fa-lg fa-envelope"></i></span>
        </div>
      <%= f.email_field :email, class: "form-control form-control-sm" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :user_type, "Tipo de comunicador" %>
    </div>
    <div>
      <%= f.select :user_type, User.user_types.keys, {}, class: "custom-select custom-select-sm "%>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :password %>
    </div>
    <div>
      <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id=""><i class="fas fa-lg fa-key"></i></span>
        </div>
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "6 caractéres mínimo" %>

      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label">
      <%= f.label :password_confirmation %><br />
    </div>
    <div>
      <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id=""><i class="fas fa-lg fa-key"></i></span>
        </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", placeholder: "Repite tu contraseña" %>
      </div>
    </div>

  </div>

  <div class="actions">
    <%= f.submit "Registrarse", class: "btn btn-success btn-sm" %>
  </div>
    <%= render "users/shared/links" %>
  <% end %>
