

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form_layout"}) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col">
    <div class="form-group">
      <div class="control-label ">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true , class: "form-control form-control-sm " %>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="form-group">
      <div class="control-label">
        <%= f.label :lastname %>
        <%= f.text_field :lastname, class: "form-control form-control-sm" %>
      </div>
    </div>
  </div>
</div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :rut %>
    </div>
    <div>
      <%= f.text_field :rut, class: "form-control form-control-sm" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label">
      <%= f.label :email %>
    </div>
    <div>
      <%= f.email_field :email, class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :user_type, "Tipo de comunicador" %>
    </div>
    <div>
      <%= f.select :user_type, User.user_types.keys, {}, class: "custom-select custom-select-sm "%>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :password %>
    </div>
    <div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>

    </div>
  </div>

  <div class="form-group">
    <div class="control-label">
      <%= f.label :password_confirmation %><br />
    </div>
    <div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
    </div>

  </div>

  <div class="actions">
    <%= f.submit "Registrarse", class: "btn btn-success" %>
  </div>
    <%= render "users/shared/links" %>
  <% end %>
