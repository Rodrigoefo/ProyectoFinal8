
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 col-md-4 col-xs-12">
      <div class="d-none d-md-block">
        <% if current_user.profile.photo_url %>
        <p><%= image_tag current_user.profile.photo_url, class: "avatar", size: "185x185" %></p>
        <% end %>
        <h5><%= current_user.name %> <%= current_user.lastname %></h5>
        <p><%= current_user.email %></p>
      </div>
      <%= link_to "Ver Perfil", users_profile_path, class: "btn btn-dark mt-1 btn-sm btn-block" %>
      <%= link_to "Editar Perfil" , edit_users_profile_path, class: "btn btn-dark mt-1 btn-sm btn-block"%>
      <%= link_to "Ver Totas las Pautas" , users_press_conferences_path, "data-turbolinks": false, class: "btn btn-info mt-1 btn-sm btn-block mb-3" %>



    </div>

    <div class="col-lg-10 col-md-8 col-xs-12">

      <div class="container-fluid">
<!--Tabla de Postulaciones Aceptadas -->
      <h6>Postulaciones <strong>aceptadas</strong></h6>
<div class="table-responsive-sm">
  <table class="table table-striped mb-5">
    <thead class="bg-dark">
      <tr>
        <th>Título</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Dónde</th>
        <th>Organizador</th>
        <th colspan="3"></th>
      </tr>
    </thead>

      <tbody>

      <% @solicitudes.each do |solicitud| %>
        <% if solicitud.status === "accepted"%>
        <tr>
          <td><%=solicitud.press_conference.title %></td>
          <td><%= solicitud.press_conference.date.strftime("%d %B %Y") %></td>
          <td><%= solicitud.press_conference.time.strftime("%H:%M") %></td>
          <td><%= solicitud.press_conference.address %></td>
          <td><%= solicitud.press_conference.organizator.name %></td>
          <td><%= link_to  users_press_conference_path(solicitud.press_conference.id) do %>
            <i class="fas fa-lg fa-eye"></i></
            <%end  %>
          </td>
          <td><%= link_to  users_press_conference_path(solicitud), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-lg fa-trash-alt"></i>
            <%end%>
          </td>

        </tr>
      <% end %>
    <% end %>
      </tbody>
  </table>

</div>



<!--Tabla de Postulaciones  -->
        <h6>Postulaciones <strong>en progreso</strong></h6>

    <div class="table-responsive-sm">
      <table class="table table-striped">
      <thead class="bg-dark">
      <tr>
        <th>Título</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Dónde</th>
        <th>Organizador</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @solicitudes.each do |solicitud| %>
      <% if solicitud.status === "in_progress"%>
            <tr>
              <td><%=solicitud.press_conference.title %></td>
              <td><%= solicitud.press_conference.date.strftime("%d %B %Y") %></td>
              <td><%= solicitud.press_conference.time.strftime("%H:%M") %></td>
              <td><%= solicitud.press_conference.address %></td>
              <td><%= solicitud.press_conference.organizator.name %></td>
              <td><%= link_to  users_press_conference_path(solicitud.press_conference.id) do %>
                <i class="fas fa-lg fa-eye"></i></
                <%end  %>
              </td>
              <td><%= link_to  users_press_conference_path(solicitud), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="far fa-lg fa-trash-alt"></i>
                <%end%>
              </td>


            </tr>
          <% end %>
      <%end %>
      </tbody>
      </table>
    </div>


      <!--Tabla Folling  -->
      <br>
      <h6><strong>Empresas</strong> que sigo:</h6>

      <div class="table-responsive-sm">
        <table class="table table-striped">
        <thead class="bg-dark">
        <tr>
          <th>Título</th>
          <th>Fecha</th>
          <th>Hora</th>
          <th>Dónde</th>
          <th>Organizador</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @press_conferences.each do |press_conference| %>
              <tr>
                <td><%=press_conference.title %></td>
                <td><%=press_conference.date.strftime("%d %B %Y") %></td>
                <td><%=press_conference.time.strftime("%H:%M") %></td>
                <td><%=press_conference.address %></td>
                <td><%=press_conference.organizator.name %></td>
                <td><%= link_to  users_press_conference_path(press_conference.id) do %>
                  <i class="fas fa-lg fa-eye"></i></
                  <%end  %>
                  <td><%= link_to  users_press_conference_path(press_conference), method: :delete, data: { confirm: '¿Seguro vas a eliminar esta pauta?' } do %>
                    <i class="far fa-lg fa-trash-alt"></i>
                    <%end%>
                  </td>

              </tr>
        <%end %>
        </tbody>
        </table>
      </div>



      </div>

    </div>

  </div>
</div>
