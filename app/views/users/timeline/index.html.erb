
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 col-md-4">
      <% if current_user.profile.photo_url %>
      <p><%= image_tag current_user.profile.photo_url, class: "avatar", size: "155x155" %></p>
      <% end %>
      <h4><%= current_user.name %> <%= current_user.lastname %></h4>
      <p><i><%= current_user.email %></i></p>

      <%= link_to "Ver Perfil", users_profile_path, class: "btn btn-dark mt-1 btn-sm" %>
      <%= link_to "Editar Perfil" , edit_users_profile_path, class: "btn btn-dark mt-1 btn-sm"%>
      <%= link_to "Ver Totas las Pautas" , users_press_conferences_path, "data-turbolinks": false, class: "btn btn-danger mt-1 btn-sm" %>



    </div>

    <div class="col-lg-10 col-md-8">

      <div class="container-fluid">
        <h4>Mis Postulaciones</h4>
      <table class="table table-striped">
      <thead class="bg-danger">
      <tr>
        <th>Título</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Dónde</th>
        <th>Organizador</th>



        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @solicitudes.each do |solicitud| %>
        <tr>
          <td><%=solicitud.press_conference.title %></td>
          <td><%= solicitud.press_conference.date.strftime("%d %B %Y") %></td>
          <td><%= solicitud.press_conference.time.strftime("%H:%M") %></td>
          <td><%= solicitud.press_conference.address %></td>
          <td><%= solicitud.press_conference.organizator.name %></td>
          <td><%= link_to  users_press_conference_path(solicitud), method: :delete do %>
            <i class="far fa-lg fa-trash-alt"></i>
            <%end%>
          </td>
        </tr>
      <% end %>
      </tbody>
      </table>
      </div>

    </div>

  </div>
</div>
